<Window x:Class="DataReducer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataReducer"
        mc:Ignorable="d"
        Title="Data Reducer" Height="500" Width="600">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" CanExecute="Open_CanExecute" Executed="Open_Executed"></CommandBinding>
    </Window.CommandBindings>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="ApplicationCommands.Open">Open</Button>
            </ToolBar>
        </ToolBarTray>
        <DockPanel DockPanel.Dock="Right" Width="150">
            <TextBlock DockPanel.Dock="Top">Table List</TextBlock>
            <Button DockPanel.Dock="Bottom" Margin ="3" Content="Drop" Height="30" Click="Button_Click"/>
            <ListBox x:Name="f_tablelist" Margin="3" ItemsSource="{Binding Tables}"/>
        </DockPanel>
        <TextBox x:Name="LogBox" Margin="3" Text="{Binding Logger}" IsReadOnly="True"/>
    </DockPanel>
</Window>
