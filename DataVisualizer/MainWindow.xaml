<Window x:Class="DataVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:DataVisualizer"
        mc:Ignorable="d"
        Title="DataVisualizer" Height="500" Width="1000">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="open" Grid.Column="0" Click="Button_Click"></Button>
        <oxy:Plot x:Name="Plot1" Title="{Binding Title}" Grid.Column="1" Margin="0,0,0,0.5">
            <oxy:Plot.Axes>
                <oxy:LinearAxis Position="Bottom"/>
                <oxy:LinearAxis Position="Left"/>
            </oxy:Plot.Axes>
            <oxy:Plot.Series>
                <oxy:LineSeries x:Name="myLine" ItemsSource="{Binding Points}"/>
            </oxy:Plot.Series>
        </oxy:Plot>
        <Label x:Name="lStatus" Grid.Column="2" Content="{Binding Points.Count}"/>
    </Grid>
</Window>
